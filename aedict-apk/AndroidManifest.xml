<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="sk.baka.aedict" android:versionCode="1" android:versionName="0.2">
	<application android:icon="@drawable/aedict_icon"
		android:label="@string/app_name" android:name=".AedictApp">
		<activity android:name=".MainActivity" android:label="@string/app_name">
	 		<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".ResultActivity" android:label="@string/searchResults"/>
		<activity android:name=".AboutActivity" android:label="@string/aboutCaption"/>
		<activity android:name=".EntryDetailActivity" android:label="@string/entryDetail"/>
		<activity android:name=".KanaTableActivity" android:label="@string/kanaTable"/>
	</application>
	<uses-sdk android:minSdkVersion="3" />
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest> 
