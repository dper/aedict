<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/jpSearch"></TextView>
	<CheckBox android:layout_height="wrap_content" android:id="@+id/jpExactMatch"
		android:text="@string/exactMatch" android:layout_width="fill_parent"></CheckBox>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<EditText android:layout_height="wrap_content" android:id="@+id/jpSearchEdit"
			android:layout_width="wrap_content" android:layout_weight="1"
			android:hint="@string/enterRomajiWord" android:inputType="text"
			android:imeOptions="actionDone"></EditText>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/search"
			android:id="@+id/jpSearch"></Button>
	</LinearLayout>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/englishSearch"></TextView>
	<CheckBox android:id="@+id/engExactMatch"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="@string/exactMatch"></CheckBox>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<EditText android:layout_height="wrap_content" android:id="@+id/engSearchEdit"
			android:layout_width="wrap_content" android:layout_weight="1"
			android:hint="@string/enterWordOrExpression" android:inputType="text"
			android:imeOptions="actionDone"></EditText>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/search"
			android:id="@+id/engSearch"></Button>
	</LinearLayout>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/configuration"></TextView>
<CheckBox android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/show_icon_in_notification_bar" android:id="@+id/cfgNotifBar"></CheckBox>
</LinearLayout>
